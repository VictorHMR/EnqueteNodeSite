<%- include("partials/head.ejs", {Screen: 'Enquetes' }); %>

    <body>
        <%- include("partials/navbar.ejs") %>

            <main class="Card-Box">
                <% enquetes.forEach(e=> { %>
                <div class="Card-E <%= e.status.class %>">
                    <a href="/edit/<%= e.id %>">
                        <img src="/img/icon_edit.png" class="edit_icon">
                    </a>
                    <a href="/enquete/<%= e.id %>" >
                        <div class="card-header">
                            <h3>
                                <%= e.titulo %>
                            </h3>
                        </div>
                        <p class="status"><%= e.status.text %> </p>
                        <p><span class="subtitle">Inicio:</span>
                            <%= e.dt_inicio %>
                        </p>
                        <p><span class="subtitle">Fim:</span>
                            <%= e.dt_fim %>
                        </p>
                    </a>
                </div>
                    <% }) %>
            </main>
    </body>


    <%- include("partials/footer.ejs") %>